<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center">

    <com.meu.facelayout.views.AutoTransparentFrameLayout
        android:id="@+id/left_button"
        android:paddingLeft="12dp"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/left_button_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_arrow_back"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/white_level_1"
            tools:ignore="RtlHardcoded"/>
    </com.meu.facelayout.views.AutoTransparentFrameLayout>

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="?android:attr/actionBarItemBackground"/>

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <com.meu.facelayout.views.AutoTransparentFrameLayout
        android:id="@+id/right_button"
        android:paddingRight="12dp"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/right_button_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:textColor="@color/white_level_1"
            tools:ignore="RtlHardcoded"/>
    </com.meu.facelayout.views.AutoTransparentFrameLayout>

</LinearLayout>